<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:weightSum="1" android:background="#ff49c8b0"
              android:orientation="vertical">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="0.3" android:background="#ffffffff"
            android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
            android:layout_marginTop="5dp">

        <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/btnPlay"
                android:id="@+id/btnPlay"
                android:layout_margin="5dp"
                android:background="#ff49c8b0"
                android:textColor="#ffffffff"
                android:textSize="30dp"
                android:typeface="serif"/>
    </FrameLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="0.7" android:background="#ffffffff"
            android:layout_margin="5dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceLarge" android:text="@string/lblJourney"
                      android:id="@+id/textView2" android:textColor="#ff000000"
                      android:layout_gravity="center_horizontal" android:layout_margin="10dp"
                      android:typeface="serif"/>

            <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinJourney"
                    android:layout_gravity="center_horizontal"
                    android:spinnerMode="dropdown"
                    android:textAlignment="textStart"
                    android:background="#3249c8b0"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceLarge" android:text="@string/lblTime"
                      android:id="@+id/textView3" android:textColor="#ff000000"
                      android:layout_gravity="center_horizontal" android:layout_margin="10dp"
                      android:typeface="serif"/>

            <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinTime"
                    android:layout_gravity="center_horizontal"
                    android:spinnerMode="dropdown"
                    android:background="#3254c7ac"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>