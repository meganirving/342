<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="00:00.0"
            android:id="@+id/timer" android:layout_gravity="center_horizontal" android:textSize="80dp"/>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_marginBottom="20dp" android:layout_marginTop="20dp"
            android:layout_marginRight="20dp" android:layout_marginLeft="20dp">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start"
                android:id="@+id/button" android:layout_gravity="center_vertical|left" android:textSize="20dp"
                android:clickable="false"
                android:typeface="serif"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Times"
                android:id="@+id/all" android:layout_gravity="center|right"
                android:textSize="20dp" android:typeface="serif"
                android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_weight="0.5" android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Best Time: "
                android:id="@+id/bestlabel"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:layout_weight="0.25" android:focusableInTouchMode="false"
                android:weightSum="1">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent" android:background="#ffa1ff6c" android:id="@+id/bestgraph"
                    >
            </LinearLayout>
        </LinearLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Worst Time: "
                android:id="@+id/worstlabel"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:layout_weight="0.25" android:weightSum="1">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent" android:background="#ffff6d64" android:id="@+id/worstgraph">
            </LinearLayout>
        </LinearLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Average Time: "
                android:id="@+id/avLabel"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:layout_weight="0.25" android:weightSum="1">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent" android:background="#ff8ac0ff" android:id="@+id/avgraph">
            </LinearLayout>
        </LinearLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Current Time: "
                android:id="@+id/currLabel"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:layout_weight="0.25" android:weightSum="1.0">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:background="#ffffffff" android:id="@+id/curr"
                    />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>